// vim: filetype=jsonc
// NOTE: trailing comma doesn't satisfy the JSONC specification.
{
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[ruby]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnType": true, // default true
    "editor.insertSpaces": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [
      120
    ],
    "editor.semanticHighlighting.enabled": true,
    "editor.tabSize": 2
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.detectIndentation": false
  }, // ref. https://stackoverflow.com/a/56060185/1006253
  "window.zoomLevel": 1,
  "workbench.startupEditor": "none",
  "editor.formatOnSave": false,
  "files.insertFinalNewline": true,
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.renderWhitespace": "trailing",
  // "scrolloff.alwaysCenter": false, // ref. https://marketplace.visualstudio.com/items?itemName=tickleforce.scrolloff
  // "scrolloff.scrolloff": 9,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "~/.vscode-vimrc",
  "vim.useCtrlKeys": false,
  "vim.useSystemClipboard": true,
  "vim.handleKeys": {
    "<C-S-l>": true, // ref. https://gist.github.com/SiddharthaSarma/221f76c873fa44a3038396c5fd7a4ecd
    "<C-v>": true
  },
  // "deno.enable": true,
  "cSpell.enabledLanguageIds": [
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "git-commit",
    "go",
    "graphql",
    "handlebars",
    "haskell",
    "html",
    "jade",
    "java",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "jupyter",
    "latex",
    "less",
    "markdown",
    "php",
    "plaintext",
    "python",
    "pug",
    "restructuredtext",
    "ruby",
    "rust",
    "scala",
    "scss",
    "swift",
    "text",
    "typescript",
    "typescriptreact",
    "vue",
    "yaml",
    "yml"
  ],
  "cSpell.ignoreRegExpList": [
    "[０-９Ａ-Ｚａ-ｚぁ-んァ-ヶ亜-熙纊-黑]+",
    "esbenp", "marp", "nostr", "rubocop", "vimrc",
  ],
  "redhat.telemetry.enabled": false,
  "editor.inlineSuggest.enabled": true,
  "[python]": {
    "editor.formatOnType": true
  },
  "markdown.marp.themes": [
    "https://raw.githubusercontent.com/rnd195/my-marp-themes/main/beamer.css"
  ],
  "makefile.configureOnOpen": true,
  "workbench.colorTheme": "Spinel",
}
